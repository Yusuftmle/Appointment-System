    <i class="bi bi-arrow-up-short"></i>
</a>

<!-- Preloader -->
<div id="preloader" style="@(showPreloader ? "" : "display: none;")"></div>

@code {
    [Inject] IJSRuntime JS { get; set; }

    private bool isDropdownOpen = false;
    private bool showScrollTop = false;
    private bool showPreloader = true;
    private bool isMobileNavOpen = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("initMobileNav");
            await JS.InvokeVoidAsync("hidePreloader");
            await JS.InvokeVoidAsync("initScrollTop");
            // Preloader'ı gizle
            await Task.Delay(500); // Kısa bir gecikme
            showPreloader = false;
            StateHasChanged();
        }
    }

    [JSInvokable]
    public void OnScroll(int scrollY)
    {
        bool shouldShow = scrollY > 100;
        if (showScrollTop != shouldShow)
        {
            showScrollTop = shouldShow;
            StateHasChanged();
        }
    }

    [JSInvokable]
    public void OnClickOutside()
    {
        if (isDropdownOpen)
        {
            isDropdownOpen = false;
            StateHasChanged();
        }
    }

    private void ToggleUserDropdown()
    {
        isDropdownOpen = !isDropdownOpen;
    }

    private void ToggleMobileNav()
    {
        isMobileNavOpen = !isMobileNavOpen;
    }

    private async Task ScrollToTop()
    {
        await JS.InvokeVoidAsync("scrollToTop");
    }

    // Header dropdown navigation methods
    private void NavigateLoginPage()
    {
        NavManager.NavigateTo("/login");
    }

    private void NavigateRegisterPage()
    {
        NavManager.NavigateTo("/register");
    }

    private void NavigateLogoutPage()
    {
        isDropdownOpen = false; // Dropdown'ı kapat
        NavManager.NavigateTo("/logout");
    }

    private void NavigateProfilePage()
    {
        isDropdownOpen = false; // Dropdown'ı kapat
        NavManager.NavigateTo("/profile");
    }

