            <a href="#" class="linkedin"><i class="bi bi-linkedin"></i></a>

            <!-- User Menu (AuthorizeView ile) -->
            <div class="user-menu-wrapper ms-3" id="userMenuWrapper">
                <AuthorizeView>
                    <Authorized Context="authContext">
                        <div class="authenticated-user">
                            <button class="user-menu-btn dropdown-toggle"
                                    type="button"
                                    @onclick="ToggleUserDropdown"
                                    aria-expanded="@isDropdownOpen.ToString().ToLower()"
                                    id="userMenuButton">
                                <div class="user-avatar">
                                    <i class="bi bi-person-fill"></i>
                                </div>
                                <span class="user-name">@authContext.User.Identity?.Name</span>
                                <i class="bi bi-chevron-down dropdown-arrow"></i>
                            </button>

                            <ul class="dropdown-menu user-dropdown @(isDropdownOpen ? "show" : "")" aria-labelledby="userMenuButton">
                                <li class="dropdown-header">
                                    <div class="user-info">
                                        <i class="bi bi-person-circle user-icon"></i>
                                        <span>@authContext.User.Identity?.Name</span>
                                    </div>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" @onclick="NavigateProfilePage">
                                        <i class="bi bi-person"></i>
                                        Profile
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="/randevularim">
                                        <i class="bi bi-calendar-check"></i>
                                        Randevularim
                                    </a>
                                </li>

                                @if (authContext.User.IsInRole("Admin"))
                                {
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item admin-item" @onclick="NavigateDashboardPage">
                                            <i class="bi bi-shield-check"></i>
                                            Admin Panel
                                        </a>
                                    </li>
                                }
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item logout-item" @onclick="NavigateLogoutPage">
                                        <i class="bi bi-box-arrow-right"></i>
                                        Logout
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </Authorized>
                    <NotAuthorized>
                        <div class="auth-buttons">
                            <a href="/login" class="login-btn">
                                <i class="bi bi-box-arrow-in-right"></i>
                                <span>Giriş</span>
                            </a>
                            <a href="/register" class="register-btn">
                                <i class="bi bi-person-plus"></i>
                                <span>Kayıt</span>
                            </a>
                        </div>
                    </NotAuthorized>
                </AuthorizeView>
            </div>

        </div>
    </div>
</header>
