    private readonly string pageImage = "https://www.meridyenpsikoloji.com/assets/img/profile-img.jpg";

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                // Basic Meta Tags
                await SetBasicMetaTags();

                // Open Graph Tags
                await SetOpenGraphTags();

                // Twitter Card Tags
                await SetTwitterCardTags();

                // Additional SEO Tags
                await SetAdditionalSeoTags();
            }
            catch (Exception ex)
            {
                // Log error - production'da logging sisteminize göre ayarlayın
                Console.WriteLine($"Meta tag setting error: {ex.Message}");
            }
        }
    }

    private async Task SetBasicMetaTags()
    {
        await JS.InvokeVoidAsync("setTitle", pageTitle);
        await JS.InvokeVoidAsync("setMetaTag", "description", pageDescription);
        await JS.InvokeVoidAsync("setMetaTag", "keywords",
            "Hatice Çağıl Kandemir, uzman psikolog Ankara, oyun terapisti Çankaya, çift terapisi Ankara, aile danışmanlığı, online terapi, evlilik danışmanlığı Ankara, çocuk psikoloğu, bireysel terapi");
        await JS.InvokeVoidAsync("setCanonical", pageUrl);
        await JS.InvokeVoidAsync("setMetaTag", "robots", "index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1");
    }

    private async Task SetOpenGraphTags()
    {
        await JS.InvokeVoidAsync("setMetaTag", "og:title", pageTitle, "property");
        await JS.InvokeVoidAsync("setMetaTag", "og:description", pageDescription, "property");
        await JS.InvokeVoidAsync("setMetaTag", "og:type", "profile", "property");
        await JS.InvokeVoidAsync("setMetaTag", "og:url", pageUrl, "property");
        await JS.InvokeVoidAsync("setMetaTag", "og:image", pageImage, "property");
        await JS.InvokeVoidAsync("setMetaTag", "og:image:width", "300", "property");
        await JS.InvokeVoidAsync("setMetaTag", "og:image:height", "300", "property");
        await JS.InvokeVoidAsync("setMetaTag", "og:image:alt", "Uzm. Psikolojik Danışman Hatice Çağıl Kandemir", "property");
        await JS.InvokeVoidAsync("setMetaTag", "og:locale", "tr_TR", "property");
        await JS.InvokeVoidAsync("setMetaTag", "og:site_name", "Meridyen Psikoloji", "property");
    }

    private async Task SetTwitterCardTags()
    {
        await JS.InvokeVoidAsync("setMetaTag", "twitter:card", "summary_large_image");
        await JS.InvokeVoidAsync("setMetaTag", "twitter:title", pageTitle);
        await JS.InvokeVoidAsync("setMetaTag", "twitter:description", pageDescription);
        await JS.InvokeVoidAsync("setMetaTag", "twitter:image", pageImage);
        await JS.InvokeVoidAsync("setMetaTag", "twitter:image:alt", "Uzm. Psikolojik Danışman Hatice Çağıl Kandemir");
    }

    private async Task SetAdditionalSeoTags()
    {
        await JS.InvokeVoidAsync("setMetaTag", "author", "Hatice Çağıl Kandemir");
        await JS.InvokeVoidAsync("setMetaTag", "geo.region", "TR-06");
        await JS.InvokeVoidAsync("setMetaTag", "geo.placename", "Ankara");
        await JS.InvokeVoidAsync("setMetaTag", "ICBM", "39.9334, 32.8597");
        await JS.InvokeVoidAsync("setMetaTag", "viewport", "width=device-width, initial-scale=1.0, maximum-scale=5.0");
        await JS.InvokeVoidAsync("setMetaTagHttpEquiv", "content-language", "tr-TR");

        // Professional specific tags
        await JS.InvokeVoidAsync("setMetaTag", "profession", "Psychological Counselor");
        await JS.InvokeVoidAsync("setMetaTag", "specialization", "Play Therapy, Couples Therapy, Family Counseling");
    }
